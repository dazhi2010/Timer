<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/imageButton2"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:text="开始计时"
        android:visibility="invisible"
        android:padding="0dp"
        android:background="#90ff0004"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
    <Button
        android:id="@+id/dropButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:drawableLeft="@android:drawable/ic_menu_sort_by_size"
        android:textSize="15dp"
        android:padding="0dp"
        android:background="#64af0dd7"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/imageButton2"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
    <Button
        android:id="@+id/imageButton1"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:text="00"
        android:textSize="15dp"
        android:padding="0dp"
        android:background="#70000000"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/dropButton"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
    <Button
        android:id="@+id/countText"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@color/colorGreen"
        app:layout_constraintLeft_toRightOf="@id/imageButton1"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dropButton"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">
    </ListView>
</android.support.constraint.ConstraintLayout>